<div class="row">
    <div class="col-md-12">
  
  
      <% flash.get('mensaje').forEach(function (msg) { %>
      <div class="alert alert-success" role="alert">
        <%=msg%>
      </div>
      <% }) %>
  
      <h2>Admin - Listado</h2>
  
      <table class="table">
        <thead>
          <tr>
            <th>id</th>
            <th>Nombre</th>
            <th>email</th>
            <th>activa</th>
            <th>acci√≥n</th>
          </tr>
        </thead>
        <tbody>
          <% administradores.forEach( administrador => { %>
            <tr>
              <td><%=administrador.id%></td>
              <td><%=administrador.nombre%></td>
              <td><%=administrador.email%></td>
              <td><%=administrador.activa ? "Si" : "No"%></td>
              <td>
                <% if (administrador.activa) { %>
                <a href="/admin/desactivar-admin/<%=administrador.id%>" class="btn btn-info">Desactivar</a>
                <% } else { %>
                <a href="/admin/activar-admin/<%=administrador.id%>" class="btn btn-primary">Activar</a>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table> 
      
  
    </div>
  
  </div>
  